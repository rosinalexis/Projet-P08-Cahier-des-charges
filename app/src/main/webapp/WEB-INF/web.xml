<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="http://java.sun.com/xml/ns/javaee"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
    version="3.0">
  <display-name>Archetype Created Web Application</display-name>
  <filter>
  	<filter-name>AuthenticationFilter</filter-name>
  	<filter-class>com.livrai.AuthenticationFilter</filter-class>
  </filter>
  <filter-mapping>
  	<filter-name>AuthenticationFilter</filter-name>
  	<url-pattern>/*</url-pattern>
  </filter-mapping>
  <servlet>
  	<servlet-name>HomeServlet</servlet-name>
  	<servlet-class>com.livrai.servlet.HomeServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>LoginServlet</servlet-name>
  	<servlet-class>com.livrai.servlet.LoginServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>ClientsServlet</servlet-name>
  	<servlet-class>com.livrai.servlet.ClientsServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>LogoutServlet</servlet-name>
  	<servlet-class>com.livrai.servlet.LogoutServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>DeliveriesServlet</servlet-name>
  	<servlet-class>com.livrai.servlet.DeliveriesServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>CommandServlet</servlet-name>
  	<servlet-class>com.livrai.servlet.CommandServlet</servlet-class>
  </servlet>
  <servlet>
  	<description>
  	</description>
  	<display-name>DeliveryServlet</display-name>
  	<servlet-name>DeliveryServlet</servlet-name>
  	<servlet-class>com.livrai.servlet.DeliveryServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>HomeServlet</servlet-name>
  	<url-pattern>/</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>LoginServlet</servlet-name>
  	<url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>ClientsServlet</servlet-name>
  	<url-pattern>/clients</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>LogoutServlet</servlet-name>
  	<url-pattern>/logout</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>DeliveriesServlet</servlet-name>
  	<url-pattern>/livraisons</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>CommandServlet</servlet-name>
  	<url-pattern>/commande</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>DeliveryServlet</servlet-name>
  	<url-pattern>/livraison</url-pattern>
  </servlet-mapping>
  
  <jsp-config>
    <jsp-property-group>
	    <url-pattern>*.jsp</url-pattern>
	    <include-prelude>/WEB-INF/taglibs.jsp</include-prelude>
    </jsp-property-group>
  </jsp-config>

</web-app>
